		<event type="finish">
			<id>1</id>
			<!-- Load player stats and choose the monster -->
			<actions phase="pre">
				<action>
					pStr : f.playerStr,
					pDef : f.playerDef,
					pDex : f.playerDex,
					mId : f.monsterId,
					mHp : f.monsterHealth,
					mAB : f.monsterAttackBase,
					mAR : f.monsterAttackRoll,
					mDB : f.monsterDefenceBase,
					mDR : f.monsterDefenceRoll;

					// get player stats (once it works)
					change pStr value {
						return 5;
					}

					change pDef value {
						return 1;
					}

					change pDex value {
						return 1;
					}

					// get monster stats
					Random rng = new Random();
					change mId value {
						return rng.nextInt(2);
					}

					if(mId.value == 0) {
						// giant rat
						change mHp value {
							return 10;
						}
						change mAB value {
							return 0;
						}
						change mAR value {
							return 3;
						}
						change mDB value {
							return 2;
						}
						change mDR value {
							return 3;
						}
					}
					else if(mId.value == 1) {
						// giant spider
						change mHp value {
							return 20;
						}
						change mAB value {
							return 2;
						}
						change mAR value {
							return 6;
						}
						change mDB value {
							return 4;
						}
						change mDR value {
							return 6;
						}
					}
				</action>
			</actions>
		</event>
