				<action>
					pStr : f.playerStr,
					mHp : f.monsterHealth,
					mDB : f.monsterDefenceBase,
					mDR : f.monsterDefenceRoll;

					// player attacks
					Random RNG = new Random();

					def attackRoll = pStr.value + RNG.nextInt(6) + 1;
					def defenceRoll = mDB.value + RNG.nextInt((int)mDR.value) + 1;

					if(defenceRoll &lt; attackRoll) {
						// hit
						change mHp value {
							return mHp.value - (attackRoll - defenceRoll);
						}
					}
				</action>
			</actions>
			<actions phase="post">
				<action>
					def processCombatTask = findTask({it.title.defaultValue.eq("Process combat [Game]").and(it.caseId.eq(useCase.getStringId()))});

					processCombatTask = assignTask(processCombatTask);
					finishTask(processCombatTask);
				</action>
			</actions>
		</event>
