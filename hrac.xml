	<data type="number">
		<id>ttl</id>
		<title>Celkovy sucet atributov</title>
		<init>10</init>
	</data>
	<data type="number">
		<id>str</id>
		<title>Sila</title>
		<init>1</init>
		<action trigger="set">
			str : f.str,
			dex : f.dex,
			defence : f.defence,
			ttl : f.ttl;

			if(str.value + dex.value + defence.value > ttl.value){
			change str value {
			return ttl.value - (dex.value + defence.value);
			}
			}
		</action>
	</data>
	<data type="number">
		<id>dex</id>
		<title>Obratnost</title>
		<init>1</init>
		<action trigger="set">
