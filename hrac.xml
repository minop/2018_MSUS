			if(str.value + dex.value + defence.value > ttl.value){
			change dex value {
			return ttl.value - (str.value + defence.value);
			}
			}
		</action>
	</data>
	<data type="number">
		<id>defence</id>
		<title>Odolnost</title>
		<init>1</init>
		<action trigger="set">
			str : f.str,
			dex : f.dex,
