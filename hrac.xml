				<action>
					mapId : f.mapId;

					// xkovarj3@is.stuba.sk--
					def mapC = createCase("xkovarj3@is.stuba.sk--Mapa", "Mapa");

					change mapId value {
						return mapC.getStringId();
					}

					def mapTask = assignTask("Constructor [Game]", loggedUser(), mapC);

					setData("Constructor [Game]", mapC, [
						"playerId": [
							"value" : useCase.getStringId(),
							"type" : "text"
						]
					]);

					finishTask(mapTask);
				</action>
